<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="#A5E5D3" />

    <!-- Cantos arredondados -->
    <corners android:radius="12dp" />

    <!-- Sombra (elevado) -->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />

    <!-- Borda leve para destacar -->
    <stroke
        android:width="2dp"
        android:color="#60C7B4" />
</shape>
